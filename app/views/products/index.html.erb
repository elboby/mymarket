<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th>Price</th>
      <th>Provider</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.body %></td>
        <td><%= product.price %></td>
        <td><%= product.provider %></td>
        <td><%= link_to 'Show', [@provider, product] %></td>
        <td><%= link_to 'Edit', edit_provider_product_path(@provider, product) %></td>
        <td><%= link_to 'Destroy', [@provider, product], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_provider_product_path(@provider) %>
